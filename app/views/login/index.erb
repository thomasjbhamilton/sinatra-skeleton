<div class="container">
  <form class="room" action="/login" method="post">
    <h2>Login!</h2>
    <div class="row">
      <div class="input-field col s4 offset-s2">
        <label> User Name:</label>
        <input type="text" name="username">
      </div>
      <div class="input-field col s4">
        <label> Password:</label>
        <input  type="password" name="password">
      </div>
    </div>
    <div class="center">
      <button class="btn waves-effect waves-light amber accent-4" type="submit">
        Submit
      </button>
    </div>
  </form>
</div>
